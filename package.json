{
    "name": "mesh-ioc",
    "version": "2.0.1",
    "description": "Mesh: Powerful and Lightweight IoC Library",
    "main": "out/main/index.js",
    "types": "out/main/index.d.ts",
    "files": [
        "out/main/**/*"
    ],
    "scripts": {
        "clean": "rm -rf out *.tsbuildinfo",
        "dev": "tsc -b -w",
        "compile": "tsc -b",
        "lint": "eslint --ext=.js,.ts,.vue --cache .",
        "test": "NODE_ENV=test mocha",
        "preversion": "npm run lint",
        "version": "npm run compile",
        "postversion": "npm publish --access=public && git push origin main --tags"
    },
    "pre-commit": [
        "lint"
    ],
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/inca/mesh-ioc.git"
    },
    "keywords": [
        "ioc",
        "di",
        "structure",
        "typesafe",
        "dependencies"
    ],
    "author": "Boris Okunskiy",
    "license": "ISC",
    "devDependencies": {
        "@types/mocha": "^8.2.3",
        "@types/node": "^16.3.1",
        "@ubio/eslint-config": "^1.1.6",
        "chalk": "^4.1.2",
        "eslint": "^7.30.0",
        "mocha": "^9.0.2",
        "pre-commit": "^1.2.2",
        "reflect-metadata": "^0.1.13",
        "typescript": "^4.3.5"
    }
}
