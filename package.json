{
    "name": "mesh-ioc",
    "version": "4.0.1",
    "description": "Powerful and Lightweight IoC Library",
    "type": "module",
    "sideEffects": false,
    "exports": {
        ".": "./out/main/index.js"
    },
    "main": "out/main/index.js",
    "types": "out/main/index.d.ts",
    "files": [
        "out/main/**/*"
    ],
    "scripts": {
        "clean": "rm -rf out *.tsbuildinfo",
        "dev": "npm run clean && tsc -b -w",
        "compile": "npm run clean && tsc -b",
        "lint": "eslint --cache",
        "test": "NODE_ENV=test mocha",
        "preversion": "npm run lint",
        "version": "npm run compile",
        "postversion": "npm publish --access=public && git push origin main --tags"
    },
    "pre-commit": [
        "lint"
    ],
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/MeshIoc/mesh-ioc.git"
    },
    "keywords": [
        "ioc",
        "di",
        "structure",
        "typesafe",
        "dependencies"
    ],
    "author": "Boris Okunskiy",
    "license": "ISC",
    "devDependencies": {
        "@nodescript/eslint-config": "^2.0.3",
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.10.2",
        "chalk": "^5.4.1",
        "eslint": "^9.17.0",
        "mocha": "^11.0.1",
        "pre-commit": "^1.2.2",
        "reflect-metadata": "^0.2.2",
        "typescript": "^5.7.2"
    }
}
